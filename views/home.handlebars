<link rel="stylesheet" href="/css/homeStyle.css">
<div id="container">
    <div class="contentBG">
        <h1>🎯 Suas tarefas 🎯</h1>

        {{#each tasks}}
        <div class="row">
            <div class="task">
                <div class="top">
                    <div></div>
                    <div class="taskName">{{nome}}</div>
                    <svg class="optionsIcon" data-task-id="{{id}}" xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4" width="20" height="20">
                        <path
                            d="M2 8a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0ZM6.5 8a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0ZM12.5 6.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3Z" />
                    </svg>
                </div>
                <div id="content">{{conteudo}}</div>
                <div class="bottom">
                    Data: {{formatDateBr data}}
                    <div class="do">
                        {{#if concluida}}
                        ✔️
                        {{else}}
                        <img src="img/clock.png" alt="clock">
                        {{/if}}
                    </div>
                </div>
            </div>
            <div id="options_{{id}}" class="options">
                <a href="/alterar/{{id}}"><button id="btnAlterar">Alterar</button></a>
                <a href="/deletar/{{id}}"><button id="btnDeletar">Deletar</button></a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<script src="js/homeJS.js"></script>